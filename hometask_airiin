                cont = 0
		while cont <self.wtoA:
			print "cont %d "% cont
			cont=cont+1
                	self.get_questions.append(self.good_list[cont])
			 
	def main_cicle(self):
                var=-1
		condition=True
			
		while var != "0":
		
			print "Iniciando ciclo de preguntas"
        		print "Las preguntas de hoy son "
